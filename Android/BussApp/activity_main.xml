<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical"
android:gravity="center_horizontal"
android:background="@android:color/white">

<!-- Project Name -->
<TextView
    android:id="@+id/project_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/smartbus_payment_scanner"
    android:textSize="26sp"
    android:layout_marginBottom="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:gravity="center"
    android:padding="12dp"
    android:background="@android:color/holo_blue_dark"/>

<!-- Payment Status View -->
<TextView
    android:id="@+id/payment_verified"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Scan NFC or QR to Pay"
    android:textSize="24sp"
    android:textColor="@android:color/holo_red_dark"
    android:layout_marginTop="16dp"/>

<!-- Price Display -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/payment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1_00"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>
</LinearLayout>

<!-- QR Code View -->
<ImageView
    android:id="@+id/qr_code"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:contentDescription="@string/qr_code_for_payment"
    android:background="@android:color/darker_gray"
    android:padding="8dp"/>

<!-- NFC Instruction -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Or tap NFC card to reader"
    android:textSize="18sp"
    android:textColor="@android:color/black"
    android:layout_marginBottom="16dp"/>
</LinearLayout>